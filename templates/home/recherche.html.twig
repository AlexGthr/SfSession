{% extends 'base.html.twig' %}

{% block title %}Recherche{% endblock %}

{% block titlePage %} <h1> Recherche </h1> {% endblock %}

{% block body %}


<div class="contentListModule">

    <div class="title_page">
        <h1> Recherche </h1>
        <hr class="after_title" />
    </div>

        {% if categories %}  
            <h1>Cat√©gorie : </h1>

                {% for categ in categories %}
                    <p><a href="#"> {{ categ.name }} </a></p>
                {% endfor %}

        {% endif %}

        {% if formateurs %}  
        <h1>Formateurs : </h1>
        
            {% for formateur in formateurs %}
                <p><a href="#"> {{ formateur.identite }} </a></p>
            {% endfor %}

        {% endif %}

        {% if formations %}  
            <h1>Formations : </h1>
        
            {% for formation in formations %}
