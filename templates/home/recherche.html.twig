            {% endfor %}

        {% endif %}

        {% if modules %}  
            <h1>Modules : </h1>

                {% for module in modules %}
                    <p><a href="#"> {{ module.name }} </a></p>
                {% endfor %}

        {% endif %}

        {% if sessions %}  
            <h1>Sessions : </h1>

                {% for session in sessions %}
                    <p><a href="#"> {{ session.name }} </a></p>
                {% endfor %}

        {% endif %}

        {% if students %}  
            <h1>Stagiaires : </h1>

                {% for student in students %}
                    <p><a href="#"> {{ student.lastName }} {{ student.name }} </a></p>
                {% endfor %}

        {% endif %}

</div>


{% endblock %}
