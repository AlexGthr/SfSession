{% extends 'base.html.twig' %}

{% block title %}Liste Modules{% endblock %}

{% block titlePage %} <h1> MODULE </h1> {% endblock %}

{% block body %}


<div class="contentListModule">

    <div class="title_page">
        <h1> Liste des modules </h1>
        <hr class="after_title" />
    </div>
        
        {% for module in modules %}
        <div class="listModule">
            <h2><a href="{{ path('show_module', {id: module.id}) }}">{{ module }}</a></h2>
        
            <p><strong>Cat√©gorie : </strong> {{ module.category }} </p>

            <div class="actionListModule">
                <a href="{{ path('edit_module', {id: module.id}) }}" class="editListModule"> Edit </a>
                <button type="button" id="buttonModal" class="deleteListCateg" data-id="{{ module.id }}" data-entity="module" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                    Delete
                  </button>
            </div>
        </div>
        {% endfor %}

</div>


{% endblock %}
