{% extends 'base.html.twig' %}

{% block title %}Add category{% endblock %}

{% block body %}

<div class="contentCategory">

    {% if edit %}
        <div class="title_page">
            <h1> Edit {{ category }} </h1>
            <hr class="after_title" />
        </div>
    {% else %}
        <div class="title_page">
            <h1> Ajout catégorie </h1>
            <hr class="after_title" />
        </div>
    {% endif %}

    <div class="formCategory">
        <div class="boxFormCategory">
            <h1><span class="blue">CATÉGORIE</span></h1>

    {{ form_start(formAddCategory) }}

        {{ form_row(formAddCategory.name) }}
        {{ form_row(formAddCategory.valider) }}

{{ form_end(formAddCategory) }}
        </div>
    </div>
</div>

{% endblock %}