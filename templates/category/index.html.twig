{% extends 'base.html.twig' %}

{% block title %}Catégorie{% endblock %}

{% block titlePage %} <h1> CATEGORIE </h1> {% endblock %}


{% block body %}

<div class="contentCategory">

    <div class="title_page">
        <h1> Liste des catégories </h1>
        <hr class="after_title" />
    </div>
        

    {% if categorys %}
    <div class="boxCategory">
        
    {% for categ in categorys %}
    
            <div class="infoCategory">

                <h2>{{ categ.name }}</h2>

                <div class="listModuleCategory">

                    <div class="moduleCateg">

                        {% if categ.modules|length == 0 %}

                            <p class="center"><strong>Aucun module dans cette catégorie.</strong></p>

                        {% else %}

                            <ul>
                                {% for module in categ.modules %}
                                    <li><a href="{{ path('show_module', {id: module.id}) }}"> {{ module }} </a> </li>
                                {% endfor %}
                            </ul>

                        {% endif %}

                    </div>

                    <div class="actionListCateg">
                        <a href="{{ path('edit_category', {id: categ.id}) }}" class="editListCateg"> Edit </a>
                        {% if categ.modules|length > 0 %}
                            <a href="#" class="cantDelListCateg"> Delete </a>
                        {% else %}
                            <a href="{{ path('del_category', {id: categ.id}) }}" class="deleteListCateg"> Delete </a>
                        {% endif %}
                    </div>
                </div>
            </div>
            
            {% endfor %}
        </div>
    
    {% else %}
    
    <p> No category currently.</p>
    {% endif %}

</div>



{% endblock %}
