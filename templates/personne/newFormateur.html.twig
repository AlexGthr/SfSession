    </div>
    {% endif %}

    <div class="formStudent">
        <div class="boxFormStudent">
            <h1><span class="blue">FORMATEUR</span></h1>
    {{ form_start(formAddFormateur) }}


        <div class="row">
            <div class="col-sm">
                {{ form_row(formAddFormateur.lastName) }}
            </div>
            <div class="col-sm">
                {{ form_row(formAddFormateur.name) }}
            </div>
        </div>

        {{ form_row(formAddFormateur.valider) }}
        </div>
    </div>

{{ form_end(formAddFormateur) }}

<p class="champObligatoire">* Champ obligatoire</p>
</section>
