{% block title %}Add Student{% endblock %}

{% block titlePage %} <h1> STAGIAIRE </h1> {% endblock %}

{% block body %}

<section class="contentFormStudent">


    {% if edit %}
    <div class="title_page">
        <h1> Edit {{ formateur }} </h1>
        <hr class="after_title" />
