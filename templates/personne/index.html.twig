{% extends 'base.html.twig' %}

{% block title %}Liste Stagiaires{% endblock %}

{% block titlePage %} <h1> STAGIAIRE </h1> {% endblock %}


{% block body %}

<div class="contentListStudent">

    <div class="title_page">
        <h1> Liste des stagiaires </h1>
        <hr class="after_title" />
    </div>
        
{% if students %}
    
<div class="boxListStudent">
<div class="tableStudent">
<h2>Stagiaires</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Nom - Prénom</th>
            <th scope="col">Ville</th>
            <th scope="col">Email</th>
            <th scope="col">Téléphone</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
            {% for student in students %}
                <tr>
                    <td scope="row"><a href="{{ path('show_student', {id: student.id}) }}"> {{ student.lastName|upper }} {{ student.name }} </a> </td>
                    <td>{{ student.city }}</td>
                    <td>{{ student.email }}</td>
                    <td>{{ student.phoneNumber }}</td>
                    <td><button type="button"  class="buttonModal deleteListStudent" data-id="{{ student.id }}" data-entity="student" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                        DEL
                      </button>
                        </td>
                </tr>
            {% endfor %}
        
            <tr>
                <td scope="row"></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>

    </tbody>
</table>

<a href="{{ path('new_student') }}" class="addStudent"> Ajouter un stagiaire </a>

</div>
</div>

{% else %}

<p> no student currently</p>
{% endif %}


{% endblock %}
