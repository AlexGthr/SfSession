{% extends 'base.html.twig' %}

{% block title %}Add Student{% endblock %}

{% block titlePage %} <h1> STAGIAIRE </h1> {% endblock %}

{% block body %}

<section class="contentFormStudent">


    {% if edit %}
    <div class="title_page">
        <h1> Edit {{ student }} </h1>
        <hr class="after_title" />
    </div>
    {% else %}
    <div class="title_page">
        <h1> Ajout Stagiaire </h1>
        <hr class="after_title" />
    </div>
    {% endif %}

    <div class="formStudent">
        <div class="boxFormStudent">
            <h1><span class="blue">STAGIAIRE</span></h1>
    {{ form_start(formAddStudent) }}

    <div class="formsError">
        <div class="row">
            <div class="col-sm">
                {{ form_row(formAddStudent.name) }}
            </div>
            <div class="col-sm">
                {{ form_row(formAddStudent.lastName) }}
            </div>
        </div>

        {{ form_row(formAddStudent.birthday) }}

        <div class="row">
            <div class="col-sm">
                {{ form_row(formAddStudent.city) }}
            </div>
            <div class="col-sm">
                {{ form_row(formAddStudent.sexe) }}
            </div>
        </div>

        <div class="row">
            <div class="col-sm">
                {{ form_row(formAddStudent.email) }}
            </div>
            <div class="col-sm">
                {{ form_row(formAddStudent.phoneNumber) }}
            </div>
        </div>

        {{ form_row(formAddStudent.valider) }}
        </div>
    </div>
    </div>
    
{{ form_end(formAddStudent) }}

<p class="champObligatoire">* Champ obligatoire</p>
</section>
{% endblock %}